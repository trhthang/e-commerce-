<%-include('../../layout/admin/head')%>
<%-include('../../layout/admin/topbar')%>
<%-include('../../layout/admin/slidebar')%>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">Setting Info User</h4>
        </div>
  
        <div class="col-12">
            <%-include("../../layout/message")%>
            <form action="/admin/setting" class="formReg" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" placeholder="Input your email" class="form-control" id="email" name="email"
                        value="<%=user.email%>" >
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" placeholder="Input your name" class="form-control" id="name" name="name"
                        value="<%=user.name%>">
                </div>
                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input type="number" placeholder="Your Phone Number.." class="form-control" id="phone" name="phone"
                        value="<%=user.phone%>">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" placeholder="Your Address.." class="form-control" id="address" name="address"
                        value="<%=user.address%>">
                </div>
                
                <button type="submit" class="btn btn-primary">LÆ°u</button>
            </form>
    </div>
</div>

<%-include('../../layout/admin/footer')%>
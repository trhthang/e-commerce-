<%- include("../../layout/admin/head")%>

<%- include("../../layout/admin/slidebar")%>

<%- include("../../layout/admin/topbar")%>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Product Lists</h6>
        </div>
        <%-include("../../layout/message")%>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Decription</th>
                        <th>Author</th>
                        <th>Image</th>
                        <th>Start upload</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Decription</th>
                        <th>Author</th>
                        <th>Image</th>
                        <th>Start upload</th>
                        <th>Action</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    <% data.forEach(function (product){ %>
                        <tr>
                            <td><%=product.name%></td>
                            <td>
                                <%cate.forEach(function(cate){%>
                                    <%if(cate._id==product.category){%>
                                        <%=cate.name%>
                                    <%}%>
                                <%})%>
                            </td>
                            <td><%=product.price%></td>
                            <td><%=product.decription%></td>
                            <td>vntutb</td>
                            <td><img src="data:<%=product.image.contentType%>;base64,<%=product.image.data%>" height="64px" width="64px">  </td>
                            <td style="width:20%"><%=product.creationDate%></td>
                            <td>
                                <a href="/admin/product/edit/<%= product.id %>" class="alert alert-primary">Edit</a>
                                <a href="/admin/product/Delete/<%= product.id %>" class="alert alert-danger" onclick="return FuncDelete()">Delete</a>
                            </td>
                        </tr>
                   <% })%>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include("../../layout/admin/footer")%>